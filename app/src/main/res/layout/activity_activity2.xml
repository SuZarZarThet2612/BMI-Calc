<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:layout_marginTop="30sp">
    <ImageView
        android:id="@+id/simpleImageView1"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:src="@drawable/bmi"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/smallImageView1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/images"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="80dp"
        tools:ignore="RtlHardcoded"
        android:contentDescription="@string/todo" />
    <TextView
        android:id="@+id/name1"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_marginTop="160dp"
        android:textSize="16sp"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/name1"
        android:layout_marginBottom="-10dp"
        android:autofillHints=""
        android:layout_marginStart="120dp"
        android:inputType=""
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="LabelFor,RtlSymmetry,TextFields"
        tools:targetApi="o" />
    <TextView
        android:id="@+id/gender1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:layout_below="@+id/name1"
        android:textSize="16sp"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <EditText
        android:id="@+id/gender2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/gender1"
        android:layout_marginBottom="-10dp"
        android:autofillHints=""
        android:layout_marginStart="120dp"
        android:inputType=""
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="LabelFor,RtlSymmetry,TextFields"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/age1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:layout_below="@+id/gender1"
        android:textSize="16sp"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <EditText
        android:id="@+id/age2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/age1"
        android:layout_marginBottom="-10dp"
        android:autofillHints=""
        android:layout_marginStart="120dp"
        android:inputType=""
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="LabelFor,RtlSymmetry,TextFields"
        tools:targetApi="o" />
    <TextView
        android:id="@+id/weight1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:layout_below="@+id/age1"
        android:textSize="16sp"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <EditText
        android:id="@+id/weight2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/weight1"
        android:layout_marginBottom="-10dp"
        android:autofillHints=""
        android:layout_marginStart="120dp"
        android:inputType=""
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="LabelFor,RtlSymmetry,TextFields"
        tools:targetApi="o" />
    <TextView
        android:id="@+id/height1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:layout_below="@+id/weight1"
        android:textSize="16sp"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <EditText
        android:id="@+id/height2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/height1"
        android:layout_marginBottom="-10dp"
        android:autofillHints=""
        android:layout_marginStart="120dp"
        android:inputType=""
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="LabelFor,RtlSymmetry,TextFields"
        tools:targetApi="o" />
    <TextView
        android:id="@+id/bmi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BMI result:"
        android:layout_below="@+id/height1"
        android:textSize="16sp"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />
    <TextView
        android:id="@+id/bmi2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/bmi"
        android:layout_marginBottom="-10dp"
        android:autofillHints=""
        android:layout_marginStart="120dp"
        android:inputType=""
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="LabelFor,RtlSymmetry,TextFields"
        tools:targetApi="o" />

</RelativeLayout>